{
    "env": {
        "es2020": true,
        "node": true
    },
    "extends": [
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      "prettier/prettier":[
          "error",
          {
              "singleQuote": true,
              "semi": false,
              "trailingComma": "all",
              "arrowParens": "avoid"
          }  
      ]
  }
}
